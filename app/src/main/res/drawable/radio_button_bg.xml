<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected State -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="#D6EAF8"/>
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#17A589"/>
            <padding
                android:left="16dp"
                android:top="16dp"
                android:right="16dp"
                android:bottom="16dp"/>
        </shape>
    </item>

    <!-- Unselected State -->
    <item>
        <shape>
            <solid android:color="@android:color/white"/>
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#D3D3D3"/>
            <padding
                android:left="16dp"
                android:top="16dp"
                android:right="16dp"
                android:bottom="16dp"/>
        </shape>
    </item>
</selector>
